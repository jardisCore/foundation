{
  "name": "jardiscore/foundation",
  "description": "DDD Foundation for PHP - Domain orchestration with zero-config infrastructure services",
  "version": "1.0.0",
  "type": "library",
  "license": "PolyForm-Noncommercial-1.0.0",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Headgent Development",
      "email": "jardisDev@headgent.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "jardissupport/factory": "^1.0",
    "jardissupport/classversion": "^1.0",
    "jardisadapter/dbconnection": "^1.0",
    "jardisadapter/cache": "^1.0",
    "jardisadapter/logger": "^1.0",
    "jardisadapter/messaging": "^1.0",
    "jardispsr/foundation": "^1.0",
    "jardissupport/dotenv": "^1.0",
    "jardissupport/repository": "^1.0",
    "jardissupport/data": "^1.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-redis": "*",
    "ext-apcu": "*",
    "ext-rdkafka": "*",
    "ext-amqp": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0.4",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "autoload": {
    "psr-4": {
      "JardisCore\\Foundation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JardisCore\\Foundation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo '#!/usr/bin/env bash' > .git/hooks/pre-commit",
      "echo 'bash ./support/pre-commit-hook.sh' >> .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  },
  "homepage": "https://github.com/jardisCore/foundation",
  "support": {
    "issues": "https://github.com/jardisCore/foundation/issues",
    "email": "jardisDev@headgent.com"
  },
  "keywords": ["domain", "foundation", "domain driven design", "jardis", "Headgent", "ddd"]
}
